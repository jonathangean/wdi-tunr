<h1><em>Tunr</em></h1>

<h3><%= @current_listener.username %></h3>


<form action="/songs/search" method='get'>
  <input type="text" name='search_term' placeholder="...search for song" >
  <input style="color:green; font-family:arial" type='submit'>
</form>
</br>

<% @songs.each do |song| %>

<div style="width:500px; padding:10px">

  <div style="float:left; padding:20px">
    <img src="<%= song.artwork_url %>">
  </div>
  <div style="float:right; padding:20px">
    <h3>
      <%= song.title %>
    </h3>

    <audio controls src="<%= song.preview_link %>"></audio>

    <form action="/songs/<%= song.id %>" method='post'>
      <%= token_tag %>
      <input type="hidden" name='_method' value='delete'>
      <button type='submit'>
        <i class='fa fa-trash-o'></i>
      </button>
    </form>

  </div>
  </br>
</div>
</br>
<% end %>



